@using RestoMVC.Core;
@model IEnumerable<Restaurante>
@{
    ViewData["Title"] = "Restaurantes";
}

<body>
    <table>
        <tbody>
            @foreach (Restaurante restaurante in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Restaurante" asp-action="Index" asp-route-id="@restaurante.Id">@restaurante.Nombre</a> 
                    </td>
                    <td>
                        <a asp-controller= "Restaurante" asp-action="ActualizarRestaurante" asp-route-id="@restaurante.Id">Actualizar</a>
                    </td>
                    <td>
                        <form asp-controller="Restaurante" asp-action="EliminarRestaurante" method="post">
                            <input type="hidden" asp-for="@restaurante.Id">
                            <button type="submit" ><b>Eliminar</b></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>