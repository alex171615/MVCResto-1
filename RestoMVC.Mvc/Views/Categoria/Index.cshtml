@model IEnumerable<RestoMVC.Core.Categoria> 
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Mercado Simple - Categorias</title>
</head>
<body>
    <a asp-action="FormAlta">Alta Categoria</a><br />
    <h5>Categorias</h5>
    <table>
        <thead>
            <tr><td>Nombre</td><td>Acciones</td></tr>
        </thead>
        <tbody>
            @foreach (RestoMVC.Core.Categoria categoria in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Categoria" asp-action="Detalle" asp-route-id="@categoria.Id">@categoria.Nombre</a> 
                    </td>
                    <td>
                        <!--Aca tengo que hacer un formulario por que dentro de él,
                            es la unica forma de invocar al método con verbo post-->
                        <form asp-controller="Categoria" asp-action="Eliminar" method="post">
                            <input type="hidden" asp-for="@categoria.Id" />
                            <button type="submit">Eliminar</button>
                            <a asp-controller="Categoria" asp-action="Modificar" asp-route-id="@categoria.Id">Modificar</a>
                        </form>                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>